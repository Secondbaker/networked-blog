<p id="notice"><%= notice %></p>

<h1>Text Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class='text-block-container'>
    <% @text_blocks.each do |text_block| %>
      <tr>
        <td><%= render partial: 'text_blocks/text_block', locals: { text_block: text_block } %></td>
        <td><%= link_to 'Show', text_block %></td>
        <td><%= link_to 'Edit', edit_text_block_path(text_block) %></td>
        <td><%= link_to 'Destroy', text_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Text Block', new_text_block_path %>
<%= javascript_pack_tag 'edit_mode' %>